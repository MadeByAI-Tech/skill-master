    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Dev) FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "envFile": "${workspaceFolder}/.envfiles/dev.env",
            "cwd": "${workspaceFolder}/src",
            "jinja": true
        },
        {
            "name": "(STG) FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "envFile": "${workspaceFolder}/.envfiles/staging.env",
            "cwd": "${workspaceFolder}/src",
            "jinja": true
        }
    ]
}